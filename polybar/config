[module/time]
type = internal/date
interval = 1.0
time = %I:%M %p
date = %a, %d %b
format = <label>
label = %time%
format-margin  = 0
format-spacing = 0
format-padding = 2

[module/date]
type = internal/date
interval = 1.0
date = %a, %d %b
format = <label>
label = %date%
format-margin  = 0
format-spacing = 0
format-padding = 2

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ACAD
poll-interval = 2
time-format = %H:%M
format-charging = bat char <label-charging>
format-charging-padding = 2
format-discharging = bat <label-discharging>
format-discharging-padding = 2
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = Fully Charged

[module/volume]
type = internal/alsa
format-volume = vol <label-volume>
label-volume = %percentage%%
format-muted-prefix = 
label-muted = " Muted"
ramp-headphones-0 = 
ramp-headphones-1 = 
format-volume-padding = 2
format-muted-padding = 2

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5
label-connected = WIFI %essid%
label-disconnected = WIFI Not Connected
format-connected-background = ${xrdb:color4}
format-connected-foreground = ${xrdb:color15}
